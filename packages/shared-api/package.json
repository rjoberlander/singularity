{
  "name": "@singularity/shared-api",
  "version": "1.0.0",
  "description": "Shared API client and React Query hooks for Singularity",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks.mjs",
      "require": "./dist/hooks.js",
      "types": "./dist/hooks.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/hooks.ts --format cjs,esm --dts --external react --external @tanstack/react-query",
    "dev": "tsup src/index.ts src/hooks.ts --format cjs,esm --dts --watch --external react --external @tanstack/react-query",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@singularity/shared-types": "*",
    "axios": "^1.7.9"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@tanstack/react-query": "^5.62.0",
    "@types/react": "^18.3.12",
    "react": "^18.3.1",
    "tsup": "^8.0.1",
    "typescript": "^5.7.2"
  },
  "files": [
    "dist"
  ],
  "private": true
}
